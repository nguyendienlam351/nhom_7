<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemSanPham">

<!--    <tdc.edu.vn.nhom_10.CustomView.CustomActionBar-->
<!--        android:id="@+id/actionBar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->

    <LinearLayout style="@style/layout">

        <ImageView
            android:id="@+id/imgAnhSP"
            android:layout_width="@dimen/largeImage"
            android:layout_height="@dimen/largeImage"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_launcher_background" />

        <EditText
            android:id="@+id/edtTenSP"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Tên sản phẩm"/>

        <EditText
            android:id="@+id/edtGiaSP"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá sản phẩm"/>

        <LinearLayout
            style="@style/spinnerLayout"
            android:layout_width="match_parent">

            <Spinner
                android:id="@+id/spnLoaiSP"
                style="@style/spinner" />
        </LinearLayout>
        <LinearLayout
            style="@style/spinnerLayout"
            android:layout_width="match_parent">

            <Spinner
                android:id="@+id/spnSizeSP"
                style="@style/spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtSoLuongSP"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="số lượng sản phẩm"/>

            <Button
                android:id="@+id/btnThayDoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing3"
                android:text="Thay đổi"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edtMoTaSP"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả sản phẩm"/>

        <Button
            android:id="@+id/btnThem"
            style="@style/addButton"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="Thêm" />
    </LinearLayout>
</LinearLayout>
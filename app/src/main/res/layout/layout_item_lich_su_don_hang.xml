<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:padding="@dimen/spacing3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/Ma"/>

            <TextView
                android:gravity="right"
                android:layout_weight="8"
                android:id="@+id/tvMa"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/ma"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/NgayDat"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/tvNgayDat"
                android:layout_width="0dp"
                android:gravity="right"
                style="@style/text"
                android:text="@string/Ngaydat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/TrangThai"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/tvTrangthai"
                android:gravity="right"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/Cho"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                style="@style/text"
                android:text="@string/Tong"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/tvTong"
                android:gravity="right"
                android:layout_width="0dp"
                android:textColor="#DD0808"
                style="@style/text"
                android:text="@string/Gia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <Button
                android:layout_weight="4"
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:backgroundTint="#DD0808"
                android:textColor="@color/white"
                style="@style/text"
                android:text="@string/Huy"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />

            <Button
                android:layout_weight="4"
                android:id="@+id/btnDaNhan"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:backgroundTint="#172FB6"
                style="@style/text"
                android:text="@string/DaNhan"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>